{
    "name": "Trumpet",
    "description": "This app lets you put a small message at the top of your site. You turn it on, and when you need to tell your users something, you enter a message and it will show the next time the user loads your site. If the user dismisses the message by clicking on it, Trumpet will not show it again for 24 hours. ",
    "keywords" : [
        "webmaster"
        ],
    "version": "0.1.0",
    "contributors": [
    {
        "name" : "Martin Reistadbakk",
        "email" : "martin@reistadbakk.com"
    }
    ],
        "repository" : {
            "type" : "git",
            "url" : "https://github.com/martior/trumpet.git"
        },
        "main" : "./public/javascripts/trumpet.js",
        "dependencies" : {
        },
        "licenses" : [
        {
            "type": "MIT",
            "url": "http://www.opensource.org/licenses/MIT"
		}],
        "implements" : "AMD",
        "scripts" : {
        },
        "config" : {
            "assets" : {
                "logos" : {
                    "200px": "./public/images/trumpet_logo-200.png",
                    "132px": "./public/images/trumpet_logo-132.png"
                },
                "detail_page" : [
                	"./public/images/trumpet_screenshot.png"
                ]
            },
            "payment": {},
            "details": {
               "Category": "Webmaster Tools",
               "Language": "English",
               "Restrictions": "None"
           },
            "interface": [
            {
                "id": "message",
                "name": "Display text",
                "description": "The text you would like displayed on your site. Leave blank to disable Trumpet.",
                "type": "string"
                },
            {
                "id": "link",
                "name": "Link (premium only)",
                "description": "A URL with more information. Should start with 'http://'.",
                "type": "string"
                },
            {
                "id": "linktext (premium only)",
                "name": "Link Text",
                "description": "The text you want to be tunred into a link. e.g. 'Read more...'.",
                "type": "string"
                },
            {
                "id": "colorbackground (premium only)",
                "name": "Background Color",
                "description": "The background color of the status bar.",
                "type": "string"
                },
            {
                "id": "colortext (premium only)",
                "name": "Text Color",
                "description": "The color of the text.",
                "type": "string"
                },
            {
                "id": "colorlink (premium only)",
                "name": "LinkCcolor",
                "description": "The color of the link text",
                "type": "string"
            }
            ]
        }
}
